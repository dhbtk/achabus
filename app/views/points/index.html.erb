<p id="notice"><%= notice %></p>

<h1>Points</h1>

<table>
  <thead>
  <tr>
    <th>Position</th>
    <th>Heading</th>
    <th>Name</th>
    <th>Notable name</th>
    <th>Notable</th>
    <th>Waypoint</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @points.each do |point| %>
      <tr>
        <td><%= point.position %></td>
        <td><%= point.heading %></td>
        <td><%= point.name %></td>
        <td><%= point.notable_name %></td>
        <td><%= point.notable %></td>
        <td><%= point.waypoint %></td>
        <td><%= link_to 'Show', point %></td>
        <td><%= link_to 'Edit', edit_point_path(point) %></td>
        <td><%= link_to 'Destroy', point, method: :delete, data: {confirm: 'Are you sure?'} %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Point', new_point_path %>
