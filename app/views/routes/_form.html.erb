<%= form_for(route) do |f| %>
    <% if route.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(route.errors.count, "error") %> prohibited this route from being saved:</h2>

          <ul>
            <% route.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="field">
      <%= f.label :parent_route %>
      <%= f.collection_select :parent_route_id, Route.all, :id, :name, {include_blank: true}, {class: 'form_control'} %>
    </div>

    <div class="field">
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>

    <div class="field">
      <%= f.label :short_name %>
      <%= f.text_field :short_name %>
    </div>

    <div class="field">
      <%= f.label :line_id %>
      <%= f.collection_select :line_id, Line.all, :id, :name, {include_blank: false}, {class: 'form_control'} %>
    </div>

    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>
