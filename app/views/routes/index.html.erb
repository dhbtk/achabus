<p id="notice"><%= notice %></p>

<h1>Routes</h1>

<table class="table table-striped">
  <thead>
  <tr>
    <th>Parent route</th>
    <th>Name</th>
    <th>Short name</th>
    <th>Route path markers</th>
    <th>Route</th>
    <th>Line</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @routes.each do |route| %>
      <tr>
        <td><%= route.parent_route&.name %></td>
        <td><%= route.name %></td>
        <td><%= route.short_name %></td>
        <td><%= route.route_path_markers %></td>
        <td><%= route.points.count %></td>
        <td><%= route.line.short_name %> - <%= route.line.name %></td>
        <td><%= link_to 'Show', route %></td>
        <td><%= link_to 'Edit', edit_route_path(route) %></td>
        <td><%= link_to 'Destroy', route, method: :delete, data: {confirm: 'Are you sure?'} %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>

