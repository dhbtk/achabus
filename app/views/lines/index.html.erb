<p id="notice"><%= notice %></p>

<h1>Lines</h1>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Short name</th>
      <th>Name</th>
      <th>Line group</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lines.each do |line| %>
      <tr>
        <td><%= line.short_name %></td>
        <td><%= line.name %></td>
        <td><%= line.line_group.name %></td>
        <td><%= link_to 'Show', line %></td>
        <td><%= link_to 'Edit', edit_line_path(line) %></td>
        <td><%= link_to 'Destroy', line, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Line', new_line_path %>
